<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_member_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_member_height"
    card_view:cardCornerRadius="@dimen/card_member_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/horizontal_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:id="@+id/name_age_gender"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="3">



                <TextView
                    android:id="@+id/text_view_card_member_name"
                    android:layout_width="@dimen/card_account_name"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/member_attr_name" />
                <TextView
                    android:id="@+id/text_view_card_member_age"
                    android:layout_width="@dimen/card_account_name"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/family_attr_age" />
                <TextView
                    android:id="@+id/text_view_card_member_gender"
                    android:layout_width="@dimen/card_account_phone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/member_attr_gender" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/button_card_member_right_arrow_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/button_card_member_right_arrow_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/button_card_member_right_arrow_corona_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />
            <ImageButton
                android:id="@+id/button_card_member_right_arrow_corona_daily"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                />

        </LinearLayout>

        <include
            layout="@layout/horizontal_line"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
