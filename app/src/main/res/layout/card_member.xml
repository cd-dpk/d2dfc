<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_member_view"
    android:layout_gravity="center"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_member_height"
    android:elevation="2dp"
    card_view:cardCornerRadius="@dimen/card_member_corner_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/horizontal_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:id="@+id/name_age_gender"
                android:layout_width="match_parent"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="3">
                <TextView
                    android:id="@+id/text_view_card_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/member_attr_name" />
                <TextView
                    android:id="@+id/text_view_card_member_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/family_attr_age" />
                <TextView
                    android:id="@+id/text_view_card_member_gender"
                    android:layout_width="@dimen/card_account_phone"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="@string/member_attr_gender" />
                <ImageButton
                    android:foregroundGravity="center"
                    android:id="@+id/button_card_member_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:src="@drawable/baseline_info_black_24"
                    android:layout_weight="1"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_card_member_daily_corona_followup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/daily_corona_followup"
                />
            <Button
                android:id="@+id/button_card_member_daily_person_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/daily_person_contact"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/button_card_member_history"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:text="@string/history"
                android:layout_weight="1"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <include
            layout="@layout/horizontal_line"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
