<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/travel_history_group">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="@string/travel_history"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/travel_dhaka"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"
                android:layout_weight="1"
                android:text="@string/dhaka"/>
            <Spinner
                android:id="@+id/travel_dhaka_spinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/travel_naranganj"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"
                android:layout_weight="1"
                android:text="@string/narayanganj"/>
            <Spinner
                android:id="@+id/travel_naranganj_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:id="@+id/travel_sylhet"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"
                android:layout_weight="1"
                android:text="@string/sylhet"/>
            <Spinner
                android:id="@+id/travel_sylhet_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/travel_out_brahmanbaria"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"
                android:layout_weight="1"
                android:text="@string/out_brahmanbaria"/>
            <Spinner
                android:id="@+id/travel_out_brahmanbaria_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/travel_out_sarail"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spinner_height"
                android:layout_weight="1"
                android:text="@string/out_sarail"/>
            <Spinner
                android:id="@+id/travel_out_sarail_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/travel_out_bangladesh"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"
                android:text="@string/out_bangladesh"/>
            <Spinner
                android:id="@+id/travel_out_bangladesh_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/spinner_height"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/common_health_issues_group">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="@string/common_health_issues"/>
        <LinearLayout
