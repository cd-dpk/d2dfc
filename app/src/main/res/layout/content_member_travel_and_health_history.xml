            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/common_respiratory_issues_related_bad_habits"/>
            <CheckBox
                android:id="@+id/common_respiratory_issues_related_bad_habits_smoking"
                android:layout_weight="1"
                android:buttonTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smoking"/>
            <CheckBox
                android:id="@+id/common_respiratory_issues_related_bad_habits_betel_leaf"
                android:layout_weight="1"
                android:buttonTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/betel_leaf"/>
            <CheckBox
                android:id="@+id/common_respiratory_issues_related_bad_habits_hooka"
                android:layout_weight="1"
                android:buttonTint="@color/red"
